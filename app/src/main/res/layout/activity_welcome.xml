<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:padding="40dp"
    >

    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:fontFamily="@font/segoeuib"
            android:textSize="32sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/segoeuisl"
            android:lineSpacingMultiplier="1.1"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam."
            android:textColor="@color/colorPrimaryDark"
            android:alpha=".75"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/logInBtn"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:text="Log In"
                android:textAllCaps="false"
                android:fontFamily="@font/segoeuib"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_focused"
                android:elevation="0dp"/>

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:fontFamily="@font/segoeuib"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/bg_button_unfocused"
                android:elevation="4dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or connect using"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondary"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorSecondary"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/facebookLogInBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:padding="0dp"
                android:background="@mipmap/ic_facebook"/>

            <Button
                android:id="@+id/googleLogInBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:padding="0dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>