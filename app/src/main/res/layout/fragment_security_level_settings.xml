<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_security_level_settings" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/segoeuib"
        android:text="Choose your \nsecurity level"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28sp" />

    <com.lukelorusso.verticalseekbar.VerticalSeekBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:vsb_max_placeholder_position="inside"
        app:vsb_min_placeholder_position="inside"
        app:vsb_progress="1"
        app:vsb_max_value="2"
        app:vsb_bar_background="@color/colorPrimary"
        app:vsb_bar_corner_radius="20dp"
        app:vsb_bar_progress="@color/colorPrimary"
        app:vsb_bar_width="40dp"
        app:vsb_click_to_set_progress="false"
        app:vsb_show_thumb="true"
        app:vsb_thumb_placeholder_src="@drawable/thumb_security_level_settings"
        app:vsb_thumb_container_corner_radius="20dp"
        app:vsb_use_thumb_to_set_progress="true"
        app:vsb_thumb_container_tint="@android:color/white"
        />

</LinearLayout>
